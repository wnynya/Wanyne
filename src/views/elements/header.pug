header#header(noselect)

  section#header-dummy

  setcion#header-nav(noselect)

    section#header-nav-cover

    section#header-nav-drawer

    section#header-nav-dropdown

      .background 
      
      .content

        .links

          a(href="/b/index" lapis) 
            h2 Blog
              .underline
          a(href="/a" lapis)
            h2 Amuject
              .underline
          a(href="/w" lapis)
            h2 Works
              .underline
          a(href="/w/greenbee" lapis)
            h3 Greenbee
                .underline
          a(href="/a/co" lapis)
            h2 Co-Amuject
              .underline

    setcion#header-nav-always

      .left
        button#button-header-nav-always-index(small ellipse outline) Index
        a#button-header-nav-always-blog(href="/b/index" button lapis) 
          button(small ellipse outline) Blog
        a#button-header-nav-always-amuject(href="/a" button lapis)
          button(small ellipse outline) Amuject

      .center
        a.logo(href="/" lapis)
          .icon 
            include /views/elements/svg/wanyne-logo-icon
          .title
            include /views/elements/svg/wanyne-logo-text

      .right
        if (req.login)
          #header-nav-always-account-background
          #header-nav-always-account
            .profile 
              .label!= req.account.label
              .image
                img(src=`${req.account.gravatar}?d=identicon&s=60` alt=`와니니 계정 프로필 사진 (${req.account.eid})`)
            .menu
              hr
              a.element(href="/u/profile" lapis) 
                .label 계정 관리
                  .underline
              if (req.hasPermission('manage.wanyne'))
                a.element(href="/m" lapis) 
                  .label 와니네 관리
                    .underline
              .element#button-header-nav-always-logout
                .label 로그아웃
                  .underline
        else
          #header-nav-always-login
            button#button-header-nav-always-login(small round) 로그인🔒
            a(href="/u/login" style="display: none;" lapis)

lapis-script(type="module" src="/resources/elements/header.mjs" defer="defer")
if redir
  lapis-script(eval="window.global.redir = '" + redir + "';")
if loginpage
  lapis-script(eval="window.global.loginpage = true;")
